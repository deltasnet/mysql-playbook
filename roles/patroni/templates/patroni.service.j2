[Unit]
Description=Runners to orchestrate a high-availability MySQL - Orchestrator
After=syslog.target network.target
 
[Service]
Type=simple
 
User=postgres
Group=postgres

# Read in configuration file if it exists, otherwise proceed
EnvironmentFile=-/etc/Orchestrator_env.conf

# The default is the user's home directory, and if you want to change it, you must provide an absolute path.
# WorkingDirectory=~
 
# Where to send early-startup messages from the server
# This is normally controlled by the global default set by systemd
# StandardOutput=syslog

# Pre-commands to start watchdog device
# Uncomment if watchdog is part of your Orchestrator setup
{% if Orchestrator_watchdog_mode in ['automatic', 'required']  %}
ExecStartPre=-/usr/bin/sudo /sbin/modprobe softdog
ExecStartPre=-/usr/bin/sudo /bin/chown postgres {{ Orchestrator_watchdog_device }} 
{% else %}
#ExecStartPre=-/usr/bin/sudo /sbin/modprobe softdog
#ExecStartPre=-/usr/bin/sudo /bin/chown postgres {{ Orchestrator_watchdog_device }} 
{% endif %}

# Start the Orchestrator process
{% if Orchestrator_installation_method == 'pip' %}
ExecStart=/usr/local/bin/Orchestrator /etc/Orchestrator/Orchestrator.yml
{% else %}
ExecStart=/usr/bin/Orchestrator /etc/Orchestrator/Orchestrator.yml
{% endif %}

# Send HUP to reload from Orchestrator.yml
ExecReload=/bin/kill -s HUP $MAINPID
 
# Only kill the Orchestrator process, not it's children, so it will gracefully stop postgres
KillMode=process
 
# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=60
 
# Restart the service if it crashed
Restart=on-failure
 
[Install]
WantedBy=multi-user.target
